<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="app.Windows.UserWindow"
        Title="Профиль"
        ContentTemplate="{StaticResource CustomerTemplate}"
        Width="600"
        SizeToContent="Height"
        WindowStartupLocation="CenterScreen">
    
    <Window.Resources>
        <DataTemplate x:Key="CustomerTemplate">
            <StackPanel Spacing="10" Margin="10">
                <Label Content="Смена пароля"></Label>
                <TextBox Name="CurrentPassword" Watermark="текущий пароль"></TextBox>
                <TextBox Name="NewPassword" Watermark="новый пароль"></TextBox>
                <TextBox Name="NewPasswordConfirm" Watermark="подтверждение нового пароля"></TextBox>
                <Button Content="Сменить пароль" Click="ChangePassword_OnClick"></Button>
            </StackPanel>
        </DataTemplate>
        <DataTemplate x:Key="AdministratorTemplate">
            
        </DataTemplate>
    </Window.Resources>
    
    
    
</Window>
